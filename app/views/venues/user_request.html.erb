<% if  @bookings.count==0 %>
  <h2>NO requests</h2>
<% else %>
<h1> Bookings request</h1>
<table border="1px">
  <thead>
    <tr>
      <th>Venue</th>
      <th>City/town</th>
      <th>Street Adrdess</th>
      <th>Landmark</th>
      <th>Contact No</th>
       <th>From</th>
        <th>To</th>
        <th>On</th>
        <th>Status</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.venue.title %></td>
        <td><%= booking.venue.place %></td>
        <td><%= booking.venue.street_address %></td>
        <td><%= booking.venue.landmark %></td>
        <td><%= booking.venue.contact_number %></td>
        <td><%= booking.venue.from %></td>
        <td><%= booking.venue.to %></td>
        <td><%= booking.on %></td>
        <%if !booking.request? %>
          <td>Request Pending</td>
          <%else %>
          <td>Booking Confirmed</td>
         <% end %>
        <td><%= link_to 'Approve', approve_requests_path(booking) %>
        <td><%= link_to 'Cancel Request', cancel_request_path(booking), data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% end -%>
<%#= link_to 'BACK', root_path %>
