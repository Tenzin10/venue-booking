<% if @venue.errors.any? %>
<h2>Following errors prevented venue from creation</h2>
  <ul>
    <% @venue.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <%end %>
  </ul>
<%end %>
<div class="row">
  <div class="col-xs-12">
      <%= form_for(@venue, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
        <%= f.label :title %>
          </div>
          <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control", placeholder: "Title of venue", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
        <%= f.label :place %>
          </div>
          <div class="col-sm-10">
        <%= f.text_area :place, class: "form-control", placeholder: " Venue Address" %>
          </div>
        </div>
          <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit class: "btn btn-primary btn-lg"%>
              </div>
          </div>
      <% end %>

      <%= link_to "Back to venue listing", venues_path %>
  </div>
</div>
